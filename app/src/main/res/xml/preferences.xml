<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/pref_category_units">

        <ListPreference
            android:key="speed_unit"
            android:title="@string/pref_speed_unit_title"
            android:defaultValue="auto"
            android:entries="@array/speed_unit_entries"
            android:entryValues="@array/speed_unit_values"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_display">

        <SwitchPreferenceCompat
            android:key="show_download"
            android:title="@string/pref_show_download_title"
            android:summary="@string/pref_show_download_summary"
            android:defaultValue="true" />

        <SwitchPreferenceCompat
            android:key="show_upload"
            android:title="@string/pref_show_upload_title"
            android:summary="@string/pref_show_upload_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_icon">

        <ListPreference
            android:key="icon_style"
            android:title="@string/pref_icon_style_title"
            android:defaultValue="combined"
            android:entries="@array/icon_style_entries"
            android:entryValues="@array/icon_style_values"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:key="arrow_style"
            android:title="@string/pref_arrow_style_title"
            android:summary="@string/pref_arrow_style_summary"
            android:defaultValue="arrows"
            android:entries="@array/arrow_style_entries"
            android:entryValues="@array/arrow_style_values"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            android:key="show_unit_in_icon"
            android:title="@string/pref_show_unit_icon_title"
            android:summary="@string/pref_show_unit_icon_summary"
            android:defaultValue="true" />

        <SwitchPreferenceCompat
            android:key="hide_notification"
            android:title="@string/pref_hide_notification_title"
            android:summary="@string/pref_hide_notification_summary"
            android:defaultValue="false" />

        <ListPreference
            android:key="icon_position"
            android:title="@string/pref_icon_position_title"
            android:summary="@string/pref_icon_position_summary"
            android:defaultValue="center_left"
            android:entries="@array/icon_position_entries"
            android:entryValues="@array/icon_position_values"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:key="icon_text_color_name"
            android:title="@string/pref_icon_color_title"
            android:defaultValue="white"
            android:entries="@array/icon_color_entries"
            android:entryValues="@array/icon_color_values"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            android:key="icon_font_size"
            android:title="@string/pref_icon_size_title"
            android:defaultValue="16"
            android:max="20"
            app:min="8"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_about">

        <Preference
            android:key="version"
            android:title="@string/pref_version_title"
            android:selectable="false" />

        <Preference
            android:key="source_code"
            android:title="@string/pref_source_code_title"
            android:summary="@string/pref_source_code_summary" />

        <Preference
            android:key="developer"
            android:title="@string/pref_developer_title"
            android:summary="@string/pref_developer_summary"
            android:selectable="false" />

        <Preference
            android:key="license"
            android:title="@string/pref_license_title"
            android:summary="@string/pref_license_summary"
            android:selectable="false" />

    </PreferenceCategory>

</PreferenceScreen>
